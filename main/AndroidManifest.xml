<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.blackcubes.brickgames"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BasicStarter"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tests.LifeCycleTest"
            android:screenOrientation="landscape" />
        <activity
            android:name=".tests.SingleTouchTest"
            android:screenOrientation="landscape" />
        <activity
            android:name=".tests.MultiTouchTest"
            android:screenOrientation="landscape" />
        <activity
            android:name=".tests.KeyTest"
            android:screenOrientation="landscape" />
        <activity
            android:name=".tests.AssetsTest"
            android:screenOrientation="landscape" />
        <activity android:name=".tests.ExternalStorageTest" android:screenOrientation="landscape" />
    </application>

</manifest>